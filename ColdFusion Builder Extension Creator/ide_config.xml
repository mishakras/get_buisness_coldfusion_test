<application>
	<name>ColdFusion Builder Extension Creator</name>
	<author>Adobe</author>
	<version>1.0</version>
	<email></email>	
	<description>Extension to build extensions for ColdFusion Builder</description>	
	
    <menucontributions >
		<contribution target="projectview" >
			<menu name="ColdFusion Builder Extension Creator">
		    	<action name="New" handlerid="newExtensionHandler" showresponse="yes">
		    	<!--
		    		<dialog>
		    		<input name="location" label="Enter Location" tooltip="Location where new extension files will be saved" type="dir"/>
		    		</dialog>
		    	-->
				</action>
				<action name="Package" handlerid="packageHandler" showresponse="yes">
					<dialog title="Package Extension">
						<input name="outputFile" label="Output File:" type="file" required="true"/>
					</dialog>
				</action>
			</menu>
		</contribution>
    </menucontributions>	

	<!-- Define Handlers-->
	<handlers>		
		<handler id="newExtensionHandler" type="CFM" filename="startNewExtension.cfm" />
		<handler id="packageHandler" type="CFM" filename="packageHandler.cfm"/>
	</handlers>
	
</application>